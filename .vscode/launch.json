            "request": "launch",
            // "program": "${workspaceFolder}/Debug/QtNote.app/Contents/MacOS/QtNote", // 直接指定可执行文件，启动调试不会在编译，速度更快
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "cwd": "${workspaceRoot}",
            "initCommands": [
                "settings set target.process.follow-fork-mode child",
