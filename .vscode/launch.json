            "symbolSearchPath": "otherSearchPath;D:/Qt/6.5.0/msvc2019_64/bin",
            "sourceFileMap": {
                "C:/Users/qt/work/qt": "D:/Qt/6.5.0/Src"
            }
        },
        {
